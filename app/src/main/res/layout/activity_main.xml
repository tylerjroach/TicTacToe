<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tylerjroach.com.tictactoe.MainActivity">

  <LinearLayout
      android:id="@+id/info_toolbar"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:paddingLeft="16dp"
      android:paddingRight="16dp"
      android:background="@color/info_toolbar_color">

    <TextView
        android:id="@+id/turn_info"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Player"
        android:gravity="center_vertical"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/new_game"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/new_game"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/info_toolbar"
      android:weightSum="3"
      android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:weightSum="3"
          android:orientation="horizontal">

        <TextView
            android:id="@+id/box1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="X"
            android:gravity="center"
            android:textSize="32sp"/>

        <TextView
            android:id="@+id/box2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="O"
            android:gravity="center"
            android:textSize="32sp"
            android:background="@color/gray_box"
            />

        <TextView
            android:id="@+id/box3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="X"
            android:gravity="center"
            android:textSize="32sp"/>

      </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/box4"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="O"
          android:gravity="center"
          android:textSize="32sp"
          android:background="@color/gray_box"
          />

      <TextView
          android:id="@+id/box5"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="X"
          android:gravity="center"
          android:textSize="32sp"/>

      <TextView
          android:id="@+id/box6"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="O"
          android:gravity="center"
          android:textSize="32sp"
          android:background="@color/gray_box"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/box7"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="X"
          android:gravity="center"
          android:textSize="32sp"/>

      <TextView
          android:id="@+id/box8"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="O"
          android:gravity="center"
          android:textSize="32sp"
          android:background="@color/gray_box"
          />

      <TextView
          android:id="@+id/box9"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="X"
          android:gravity="center"
          android:textSize="32sp"/>

    </LinearLayout>



  </LinearLayout>




</RelativeLayout>
